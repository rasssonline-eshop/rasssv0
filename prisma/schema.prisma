// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

// NextAuth.js Models
model Account {
  id                String  @id @default(auto()) @map("_id") @db.ObjectId
  userId            String  @db.ObjectId
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(auto()) @map("_id") @db.ObjectId
  sessionToken String   @unique
  userId       String   @db.ObjectId
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model User {
  id            String    @id @default(auto()) @map("_id") @db.ObjectId
  name          String?
  email         String    @unique
  emailVerified DateTime?
  password      String
  image         String?
  role          String    @default("customer") // customer, seller, admin
  sellerStatus  String?   // pending, approved, rejected
  phone         String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  accounts Account[]
  sessions Session[]
  orders   Order[]
}

model VerificationToken {
  id         String   @id @default(auto()) @map("_id") @db.ObjectId
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// E-commerce Models
model Product {
  id                String   @id @default(auto()) @map("_id") @db.ObjectId
  name              String
  slug              String   @unique
  description       String?
  price             Float
  oldPrice          Float?
  costPrice         Float?
  image             String?
  images            String[]
  category          String
  brand             String?
  sku               String?
  stock             Int      @default(0)
  lowStockThreshold Int      @default(10)
  status            String   @default("active") // active, inactive
  isFeatured        Boolean  @default(false)
  metaTitle         String?
  metaDescription   String?
  rating            Float?   @default(4.3)
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
}

model Order {
  id              String   @id @default(auto()) @map("_id") @db.ObjectId
  userId          String   @db.ObjectId
  orderNumber     String   @unique
  status          String   @default("pending") // pending, paid, shipped, delivered, cancelled
  total           Float
  paymentMethod   String   @default("cod") // cod, jazzcash, easypaisa, card
  paymentStatus   String   @default("unpaid") // unpaid, paid, refunded
  transactionId   String?
  items           Json     // Array of {productId, name, qty, price}
  shippingAddress Json?    // {name, phone, address, city, postalCode}
  customerName    String?
  customerEmail   String?
  customerPhone   String?
  note            String?
  placedAt        DateTime @default(now())
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  user User @relation(fields: [userId], references: [id])
}

model Category {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  name        String   @unique
  slug        String   @unique
  image       String?
  comingSoon  Boolean  @default(false)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model InventoryMovement {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  productId   String
  productName String
  type        String   // in, out
  qty         Int
  unit        String?
  note        String?
  date        DateTime @default(now())
  createdAt   DateTime @default(now())
}
